{
  "scripts": {
    "dev:deep_chat": "tsx src/deep_chat_dev.ts",
    "deploy": "npm run deploy:deep_chat",
    "deploy:deep_chat": "rimraf dist && npm run deep_chat:build && npm run deep_chat:zip && npm run deep_chat:update-function-code",
    "deep_chat:build": "rolldown --config ./rolldown.config.mjs --input src/deep_chat.ts --file dist/deep_chat.mjs",
    "deep_chat:zip": "cd dist && zip deep_chat.zip deep_chat.mjs",
    "deep_chat:update-function-code": "aws lambda update-function-code --function-name \"$DEEP_CHAT_FUNCTION_NAME\" --zip-file fileb://./dist/deep_chat.zip >/dev/null"
  },
  "devDependencies": {
    "@hono/node-server": "^1.14.1",
    "@slack/bolt": "^4.3.0",
    "@types/aws-lambda": "^8.10.149",
    "@types/node": "^20.11.17",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "^2.2.8",
    "@aws-sdk/client-dynamodb": "^3.817.0",
    "@aws-sdk/client-sqs": "^3.804.0",
    "@aws-sdk/credential-providers": "^3.803.0",
    "@aws-sdk/lib-dynamodb": "^3.821.0",
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@slack/web-api": "^7.0.2",
    "ai": "^4.1.46",
    "deep-chat": "^2.2.0",
    "hono": "^4.7.9",
    "rolldown": "^1.0.0-beta.8",
    "slackify-markdown": "^4.4.0",
    "zod": "^3.24.2"
  }
}